# Environment variables for TubeCord.
# Copy this to .env and replace placeholder values with your deployment-specific settings.

# YouTube Configuration: required identifiers and credentials for the channel you want to monitor.
YOUTUBE_CHANNEL_ID=your_youtube_channel_id_here
YOUTUBE_API_KEY=your_youtube_api_key_here

# Discord Configuration: supply one or more webhook URLs per content type; role IDs are optional.
# Multiple entries should be comma-separated so the service can notify several servers.

# Upload notifications: Discord destinations and roles for standard video uploads.
UPLOAD_WEBHOOK_URLS=https://discord.com/api/webhooks/your_upload_webhook_url_here
UPLOAD_ROLE_IDS=your_upload_role_id_here,another_upload_role_id

# Livestream notifications: Discord destinations and roles for livestream announcements.
LIVESTREAM_WEBHOOK_URLS=https://discord.com/api/webhooks/your_livestream_webhook_url_here
LIVESTREAM_ROLE_IDS=your_livestream_role_id_here,another_livestream_role_id

# Community post notifications (optional): requires yp-dl integration to scrape community posts.
COMMUNITY_WEBHOOK_URLS=https://discord.com/api/webhooks/your_community_webhook_url_here
COMMUNITY_ROLE_IDS=your_community_role_id_here,another_community_role_id

# WebSub Configuration: public-facing callback settings shared with YouTube's WebSub hub.
CALLBACK_URL=https://your-public-domain.example.com/webhook
# CALLBACK_PORT=443  # Override when exposing the webhook on a non-standard port

# Flask Server Configuration: controls the local Flask/FastAPI server that handles incoming callbacks.
HOST=0.0.0.0
PORT=8000
DEBUG=False  # False keeps Flask/FastAPI in production mode (no auto-reload, minimal error pages); set to True only for local debugging

# Discord Message Format Configuration: toggle embed rendering for outgoing webhook payloads.
USE_RICH_EMBEDS=True  # Set to False for simple text messages instead of rich embeds

# Logging Configuration: choose the verbosity for application logs (DEBUG, INFO, WARNING, ERROR).
LOG_LEVEL=INFO
